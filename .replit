modules = ["python-3.11", "python3"]

[nix]
channel = "stable-25_05"
packages = ["cargo", "ffmpeg-full", "glibcLocales", "libiconv", "libjpeg_turbo", "libpng", "libxcrypt", "pkg-config", "rustc", "which", "xsimd"]

[deployment]
deploymentTarget = "autoscale"
run = ["streamlit", "run", "app.py", "--server.port", "5000"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow]]
name = "Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run app.py --server.port 5000"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80
exposeLocalhost = true

[agent]
integrations = ["python_openai==1.0.0", "perplexity_v0==1.0.0"]
